{
  "name": "work-with-us-backend",
  "version": "1.0.0",
  "description": "Backend for work-with-us job application system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:nodemon": "nodemon --exec tsx src/server.ts",
    "build": "tsc",
    "start": "tsx src/server.ts",
    "start:node": "node dist/server.js",
    "test": "vitest",
    "test:all": "npm run test:controllers && npm run test:services && npm run test:utils && npm run test:e2e",
    "test:controllers": "./src/tests/scripts/run-all-controller-tests.sh",
    "test:services": "./src/tests/scripts/run-all-service-tests.sh",
    "test:utils": "./src/tests/scripts/run-all-utils-tests.sh",
    "test:e2e": "./src/tests/scripts/run-all-e2e.sh",
    "test:unit": "npm run test:controllers && npm run test:services && npm run test:utils",
    "test:integration": "npm run test:e2e",
    "test:auth": "./src/tests/scripts/quick-controller-test.sh auth",
    "test:position": "./src/tests/scripts/quick-controller-test.sh position",
    "test:job": "./src/tests/scripts/quick-controller-test.sh job",
    "test:application": "./src/tests/scripts/quick-controller-test.sh application",
    "test:question-option": "./src/tests/scripts/quick-controller-test.sh question-option",
    "test:admin": "./src/tests/scripts/quick-controller-test.sh admin",
    "test:auth-service": "./src/tests/scripts/quick-service-test.sh auth",
    "test:position-service": "./src/tests/scripts/quick-service-test.sh position",
    "test:job-service": "./src/tests/scripts/quick-service-test.sh job",
    "test:application-service": "./src/tests/scripts/quick-service-test.sh application",
    "test:question-option-service": "./src/tests/scripts/quick-service-test.sh question-option",
    "test:file-upload": "./src/tests/scripts/quick-utils-test.sh file-upload",
    "test:pagination": "./src/tests/scripts/quick-utils-test.sh pagination",
    "test:slug": "./src/tests/scripts/quick-utils-test.sh slug",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/database/seed.ts"
  },
  "keywords": [
    "job",
    "application",
    "recruitment",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.2",
    "fastify": "^4.24.3",
    "tsx": "^4.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "light-my-request": "^6.6.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
